APP_NAME=ICT
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Локализация и часовой пояс
APP_LOCALE=ru
APP_FALLBACK_LOCALE=ru
APP_FAKER_LOCALE=ru_RU
APP_TIMEZONE=Asia/Omsk

# Настройки режима обслуживания
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Настройки PHP CLI сервера
PHP_CLI_SERVER_WORKERS=4

# Уровень хеширования
BCRYPT_ROUNDS=12

# Логирование
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# База данных
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ict
DB_USERNAME=sail
DB_PASSWORD=password

# Настройки сессий
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Общие настройки
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Кэширование - локально используем файловое для снижения зависимости от БД
CACHE_STORE=file
# CACHE_PREFIX=

# Memcached
MEMCACHED_HOST=127.0.0.1

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Настройки почты
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Настройки для Gmail (опционально)
# MAIL_MAILER=gmail
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=youremail@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=youremail@gmail.com
# MAIL_FROM_NAME="${APP_NAME}"

# Google OAuth настройки
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost/auth/google/callback
GOOGLE_PROJECT_ID=

# AWS настройки (если используются)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Laravel Sail настройки
WWWGROUP=1000
WWWUSER=1000
SAIL_XDEBUG_MODE=off
SAIL_XDEBUG_CONFIG=client_host=host.docker.internal

# Docker port forwarding
FORWARD_DB_PORT=3306
VITE_PORT=5173

# Vite настройки
VITE_APP_NAME="${APP_NAME}"
VITE_ENABLED=true

# Дополнительные настройки безопасности для продакшн
# SESSION_SECURE_COOKIE=true # Включить при использовании HTTPS
# SANCTUM_STATEFUL_DOMAINS=your-domain.com
