APP_NAME="ICT Application"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://your_server_ip
APP_PORT=80
APP_LOCALE=ru
APP_FALLBACK_LOCALE=ru
APP_FAKER_LOCALE=ru_RU

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ict_production
DB_USERNAME=ict_user
DB_PASSWORD=strong_password_here

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@yourserverip.com"
MAIL_FROM_NAME="${APP_NAME}"

# For Google mailer if needed (found in composer.json)
# MAIL_MAILER=gmail
# MAIL_USERNAME=your_gmail_username
# MAIL_PASSWORD=your_gmail_app_password

# OAuth & Social settings (found in composer.json)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://your_server_ip/auth/google/callback

# Laravel Sail
WWWGROUP=1000
WWWUSER=1000
SAIL_XDEBUG_MODE=off
SAIL_XDEBUG_CONFIG=client_host=host.docker.internal

# Docker port forwarding
FORWARD_DB_PORT=3306
VITE_PORT=5173

# Set a strong, secure key before deploying to production
# Generate with: php artisan key:generate
# APP_KEY=base64:your_generated_key

# Additional security for production
SESSION_SECURE_COOKIE=false # Set to true if using HTTPS
SANCTUM_STATEFUL_DOMAINS=your_server_ip
