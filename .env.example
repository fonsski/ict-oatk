APP_NAME="ICT Application"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_PORT=80

# Localization and timezone settings
APP_LOCALE=ru
APP_FALLBACK_LOCALE=ru
APP_FAKER_LOCALE=ru_RU
APP_TIMEZONE=Asia/Omsk

# Maintenance mode settings
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP CLI server settings
PHP_CLI_SERVER_WORKERS=4

# Hashing settings
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ict
DB_USERNAME=sail
DB_PASSWORD=password

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
# SESSION_SECURE_COOKIE=false # Set to true if using HTTPS

# General settings
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache settings
CACHE_STORE=file
# CACHE_PREFIX=

# Memcached
MEMCACHED_HOST=127.0.0.1

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail settings
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Gmail configuration (if needed)
# MAIL_MAILER=gmail
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_gmail_username
# MAIL_PASSWORD=your_gmail_app_password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=your_gmail_address
# MAIL_FROM_NAME="${APP_NAME}"

# Telegram bot settings
TELEGRAM_BOT_TOKEN=

# OAuth & Social settings
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost/auth/google/callback
GOOGLE_PROJECT_ID=

# AWS settings (if used)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Laravel Sail
WWWGROUP=1000
WWWUSER=1000
SAIL_XDEBUG_MODE=off
SAIL_XDEBUG_CONFIG=client_host=host.docker.internal

# Docker port forwarding
FORWARD_DB_PORT=3306
VITE_PORT=5173

# Vite settings
VITE_APP_NAME="${APP_NAME}"
VITE_ENABLED=true

# Additional security for production
# Generate APP_KEY with: php artisan key:generate
# APP_KEY=base64:your_generated_key
SANCTUM_STATEFUL_DOMAINS=localhost
